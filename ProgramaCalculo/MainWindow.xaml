<Window x:Class="ProgramaCalculo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramaCalculo"
        mc:Ignorable="d"
        Title="Programa Calculo" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="0,40,0,0" TextAlignment="Center">Ingresar Matriz</TextBlock>
        <RichTextBox x:Name="richTextBoxEntrada" HorizontalAlignment="Left" Height="106" Margin="265,77,0,0" VerticalAlignment="Top" Width="289">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <Button Width="200" Height="30" Click="Button_Click">Generar</Button>

        <Line Margin="0,220,0,0"
            X1="50" Y1="20"  
            X2="730" Y2="20"  
            Stroke="#00b19d"  
            StrokeThickness="2" />


        <RichTextBox x:Name="richTextBoxSalida" HorizontalAlignment="Left" Height="106" Margin="265,270,0,0" VerticalAlignment="Top" Width="289">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
